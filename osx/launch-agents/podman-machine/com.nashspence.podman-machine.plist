<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0"><dict>
  <key>Label</key><string>com.nashspence.podman-machine</string>

  <key>ProgramArguments</key>
  <array>
    <string>%REPO_DIR%/osx/launch-agents/podman-machine/Scripts - Podman Machine</string>
  </array>

  <key>AssociatedBundleIdentifiers</key>
  <array>
    <string>com.nashspence.podman-machine</string>
  </array>

  <key>Sockets</key>
  <dict>
    <key>Control</key>
    <dict>
      <key>SockPathName</key><string>/tmp/com.nashspence.podman-machine.%UID_NUM%.sock</string>
      <key>SockFamily</key><string>Unix</string>
      <key>SockType</key><string>stream</string>
      <key>SockMode</key><integer>384</integer>
    </dict>
  </dict>

  <key>inetdCompatibility</key>
  <dict>
    <key>Wait</key><false/>
  </dict>

  <key>EnvironmentVariables</key>
  <dict>
    <key>MACHINE</key><string>%MACHINE%</string>
  </dict>

  <key>KeepAlive</key><false/>
  <key>ProcessType</key><string>Background</string>
  <key>StandardOutPath</key><string>/Users/%UID%/Library/Logs/com.nashspence.podman-machine.out.log</string>
  <key>StandardErrorPath</key><string>/Users/%UID%/Library/Logs/com.nashspence.podman-machine.err.log</string>
</dict></plist>
