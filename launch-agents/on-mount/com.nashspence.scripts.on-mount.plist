<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.nashspence.scripts.on-mount</string>

  <key>ProgramArguments</key>
  <array>
    <string>__AGENT_ROOT__/bin/on-mount</string>
  </array>

  <key>RunAtLoad</key>
  <true/>
  <key>KeepAlive</key>
  <true/>
  <key>LimitLoadToSessionType</key>
  <string>Aqua</string>

  <key>EnvironmentVariables</key>
  <dict>
    <key>ON_MOUNT_TRIGGERS_DIR</key>
    <string>__TRIGGERS_DIR__</string>
  </dict>

  <key>StandardOutPath</key>
  <string>__LOG_DIR__/on-mount.stdout.log</string>
  <key>StandardErrorPath</key>
  <string>__LOG_DIR__/on-mount.stderr.log</string>
</dict>
</plist>
